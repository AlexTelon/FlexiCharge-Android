<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <ImageButton
        android:id="@+id/identify_charger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:alpha="0.9"
        android:background="@drawable/oval_menu_background"
        android:padding="10dp"
        android:src="@drawable/ic_charger"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.498"
        map:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:alpha="0.9"
        android:background="@drawable/oval_menu_background"
        android:padding="12dp"
        android:src="@drawable/ic_camera"
        map:layout_constraintBottom_toBottomOf="@+id/identify_charger_button"
        map:layout_constraintStart_toStartOf="@+id/map"
        map:layout_constraintTop_toTopOf="@+id/identify_charger_button" />

    <ImageButton
        android:id="@+id/user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:alpha="0.9"
        android:background="@drawable/oval_menu_background"
        android:padding="12dp"
        android:src="@drawable/ic_user"
        map:layout_constraintBottom_toBottomOf="@+id/identify_charger_button"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toTopOf="@+id/identify_charger_button" />

    <ImageButton
        android:id="@+id/position_pin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:alpha="0.9"
        android:background="@drawable/oval_menu_background"
        android:padding="12dp"
        android:src="@drawable/ic_position_pin"
        map:layout_constraintBottom_toTopOf="@+id/camera_button"
        map:layout_constraintEnd_toEndOf="@+id/camera_button"
        map:layout_constraintStart_toStartOf="@+id/camera_button" />


</androidx.constraintlayout.widget.ConstraintLayout>