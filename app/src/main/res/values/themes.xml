<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bolt" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mild_grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mild_grey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomMaterialButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="KlarnaMaterialButtons" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>